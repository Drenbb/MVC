<Window x:Class="MVC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVC"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock x:Name="TXTshelk"/>
            <Button Content="Нажми меня, умоляю" Name="BTNshelk" Click="BTNshelk_Click"/>
            <TextBlock x:Name="TXTfam" />
            <ComboBox Name="CMBfam" SelectionChanged="CMBfam_SelectionChanged"/>
        </StackPanel>
    </Grid>
</Window>
